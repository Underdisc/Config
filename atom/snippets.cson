###############################################################################
# DP Main Comment
###############################################################################
 '.source.cpp':
   'DP Main File Comment':
     'prefix': 'commentfilemaindp'
     'body': """
/*****************************************************************************/
/*!
\\\\file $1
\\\\author ${2:Connor Deakin}
\\\\par E-mail: ${3:connor.deakin\\\\@digipen.edu}
\\\\par DigiPen login: ${4:connor.deakin}
\\\\par Course: $5
\\\\par Assignment: $6
\\\\date ${7:DD}/${8:MM}/${9:YYYY}
\\\\brief
  $10

\\\\par
    Functions Inlclude:
    - $11

  Hours: $12

  Problems: $13
*/
/*****************************************************************************/$14
"""

