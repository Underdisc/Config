###############################################################################
# Class Comment
###############################################################################
   'Class Comment':
     'prefix': 'commentclass'
     'body': """
/*****************************************************************************/
/*!
\\\\class $1
\\\\brief
  $2

\\\\par
    Operations include:
    - $3

\\\\deprecated
    - ${4:Nothing}

\\\\bug
    - ${5:Nothing}
*/
/*****************************************************************************/$6
"""

###############################################################################
# Function Comment
###############################################################################
   'Function Comment':
     'prefix': 'commentfunction'
     'body': """
/*****************************************************************************/
/*!
\\\\brief
  $1

\\\\param $2
  $3

\\\\return $4
*/
/*****************************************************************************/$5
"""

###############################################################################
